= form_for(@palabra) do |f|
  = render 'error_messages', target: @palabra

  = f.label :palabra 
  = f.text_field :palabra

  = f.label :lugar
  = f.text_field :lugar
 
  %br 
  %p
    %input#significados{type: 'hidden', name:'significados', style: 'width:300px' }

  .actions
    = f.submit class:'btn btn-primary'
