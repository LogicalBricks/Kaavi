= form_for(@palabra) do |f|
  = render 'error_messages', target: @palabra

  = f.label :palabra 
  = f.text_field :palabra

  = f.label :lugar
  = f.text_field :lugar
 
  %br 
  %p
    - significados = @palabra.traducciones.collect(&:significado_id).join(",")
    %input#significados{type: 'hidden', name:'significados', style: 'width:300px', value:"#{significados}" }

  .actions
    = f.submit 'Guardar', class:'btn btn-primary'
