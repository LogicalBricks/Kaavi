= form_for(@palabra) do |f|
  = render 'error_messages', target: @palabra

  = f.label :palabra 
  = f.text_field :palabra

  = f.label :lugar
  = f.text_field :lugar

  = f.label :audio
  = f.file_field :audio
 
  %br 
  %p
    %input#significados{type: 'hidden', name:'significados', style: 'width:300px', value: "#{@palabra_view.significados_id_comma }", data: { value: @palabra_view.significados_json } }

  .actions
    = f.submit 'Guardar', class:'btn btn-primary'

.significado_alert
= link_to 'Agregar significado','#', id: 'agregar_significado_btn'
#agregar_significado
  - @significado = Significado.new
  %h2 Agregar significado
  = form_for @significado, remote: true, html: { type: :html, id: 'agregar_significado_form'} do |s|
    = s.label :palabra
    = s.text_field :palabra
    = s.submit "Agregar", class:'btn btn-success'

